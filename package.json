{
  "name": "browser-shell",
	"displayName": "Browser Shell",
	"description": "Browser Shell",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "*"
	],
	"main": "./out/extension.js",
	"browser": "./out/extension-web.js",
	"extensionKind": [
		"workspace",
		"ui",
		"web"
	],
	"contributes": {
		"commands": [
			{
				"command": "browser-shell.helloWorld",
				"title": "Hello World"
			}
		],
		"terminal": {
			"profiles": [
				{
					"id": "browser-shell.brsh",
					"title": "brsh",
					"icon": "$(browser)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"compile-web": "webpack --config ./src/webpack.config.js",
		"watch-web": "webpack --watch --config ./src/webpack.config.js",
		"package-web": "webpack --mode production --devtool hidden-source-map --config ./src/webpack.config.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.5",
		"webpack": "^5.51.1",
		"webpack-cli": "^4.8.0"
	}
}
